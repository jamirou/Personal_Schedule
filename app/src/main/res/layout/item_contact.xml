<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground"
    android:padding="0.2dp"
    app:cardCornerRadius="10dp"
    app:cardUseCompatPadding="true">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="5dp">

        <!--IMAGE CONTACT-->
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/Image_C_Item"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:scaleType="centerCrop"
            android:src="@drawable/contactuser" />

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="vertical">
            <!--ID CONTACT-->
            <TextView
                android:id="@+id/Id_C_Item"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nunitosans"
                android:text="@string/Id_C_Item"
                android:textSize="18sp" />
            <!--UID CONTACT-->
            <TextView
                android:id="@+id/Uid_C_Item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:fontFamily="@font/nunitosans"
                android:text="@string/Uid_C_Item"
                android:textSize="18sp" />
            <!--NAMES CONTACT-->
            <TextView
                android:id="@+id/Names_C_Item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nunitosans"
                android:text="@string/Names_C_Item"
                android:textStyle="bold"
                android:gravity="center"
                android:textSize="20sp" />
            <!--LASTNAME CONTACT-->
            <TextView
                android:id="@+id/LastName_C_Item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:fontFamily="@font/nunitosans"
                android:text="@string/LastName_C_Item"
                android:textSize="18sp" />
            <!--MAIL CONTACT-->
            <TextView
                android:id="@+id/Mail_C_Item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nunitosans"
                android:gravity="center"
                android:text="@string/Mail_C_Item"
                android:textSize="13sp" />
            <!--PHONE CONTACT-->
            <TextView
                android:id="@+id/Phone_C_Item"
                android:layout_width="match_parent"
                android:visibility="gone"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nunitosans"
                android:text="@string/Phone_C_Item"
                android:textSize="18sp" />
            <!--AGE CONTACT-->
            <TextView
                android:id="@+id/Age_C_Item"
                android:layout_width="match_parent"
                android:visibility="gone"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nunitosans"
                android:text="@string/Age_C_Item"
                android:textSize="18sp" />
            <!--HOME CONTACT-->
            <TextView
                android:id="@+id/Home_C_Item"
                android:layout_width="match_parent"
                android:visibility="gone"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nunitosans"
                android:text="@string/Home_C_Item"
                android:textSize="18sp" />

        </androidx.appcompat.widget.LinearLayoutCompat>

    </androidx.appcompat.widget.LinearLayoutCompat>

</androidx.cardview.widget.CardView>